{
  "name": "matcha-lsp",
  "displayName": "本件 Matcha - Legal Reasoning Language",
  "description": "法的推論のための形式言語「本件 Matcha」のLanguage Server Protocol実装",
  "version": "0.1.0",
  "publisher": "matcha-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:matcha"
  ],
  "main": "./dist/vscode-extension/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "matcha",
        "aliases": [
          "Matcha",
          "本件Matcha"
        ],
        "extensions": [
          ".matcha",
          ".mcha"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "matcha",
        "scopeName": "source.matcha",
        "path": "./syntaxes/matcha.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
