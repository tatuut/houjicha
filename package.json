{
  "name": "houjicha-lsp",
  "displayName": "ほうじ茶 - 法的推論言語",
  "description": "法的推論のための形式言語「ほうじ茶」のLanguage Server Protocol実装",
  "version": "0.1.0",
  "publisher": "houjicha-lang",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/vscode-extension/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "houjicha",
        "aliases": [
          "Houjicha",
          "ほうじ茶"
        ],
        "extensions": [
          ".houjicha",
          ".hcha"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "houjicha",
        "scopeName": "source.houjicha",
        "path": "./syntaxes/houjicha.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "houjicha.openPreview",
        "title": "ほうじ茶: プレビューを開く",
        "icon": "$(open-preview)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == houjicha",
          "command": "houjicha.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "when": "resourceLangId == houjicha",
          "command": "houjicha.openPreview"
        }
      ]
    },
    "keybindings": [
      {
        "command": "houjicha.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == houjicha"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "houjicha-explorer",
          "title": "ほうじ茶",
          "icon": "$(law)"
        }
      ]
    },
    "views": {
      "houjicha-explorer": [
        {
          "id": "houjichaOutline",
          "name": "論証構造",
          "icon": "$(list-tree)",
          "contextualTitle": "ほうじ茶 論証構造"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "vscode:prepublish": "npm run build",
    "package": "vsce package"
  },
  "dependencies": {
    "js-yaml": "^4.1.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
