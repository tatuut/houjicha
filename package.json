{
  "name": "chai-lsp",
  "displayName": "Chai - 法的推論言語",
  "description": "法的推論のための形式言語「Chai」のLanguage Server Protocol実装",
  "version": "0.1.0",
  "publisher": "chai-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatuut/chai.git"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./dist/vscode-extension/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "chai",
        "aliases": [
          "Chai",
          "チャイ"
        ],
        "extensions": [
          ".chai"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "chai",
        "scopeName": "source.chai",
        "path": "./syntaxes/chai.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "chai.openPreview",
        "title": "Chai: プレビューを開く",
        "icon": "$(open-preview)"
      },
      {
        "command": "chai.showSymbolGuide",
        "title": "Chai: 記号早見表を表示",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == chai",
          "command": "chai.openPreview",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "when": "resourceLangId == chai",
          "command": "chai.openPreview"
        },
        {
          "when": "resourceLangId == chai",
          "command": "chai.showSymbolGuide"
        }
      ]
    },
    "keybindings": [
      {
        "command": "chai.openPreview",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceLangId == chai"
      },
      {
        "command": "chai.showSymbolGuide",
        "key": "ctrl+shift+h",
        "mac": "cmd+shift+h",
        "when": "resourceLangId == chai"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "chai-explorer",
          "title": "Chai",
          "icon": "$(law)"
        }
      ]
    },
    "views": {
      "chai-explorer": [
        {
          "id": "chaiOutline",
          "name": "論証構造",
          "icon": "$(list-tree)",
          "contextualTitle": "Chai 論証構造"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -watch",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "vscode:prepublish": "npm run build",
    "package": "vsce package",
    "mcp": "node dist/mcp/server.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "js-yaml": "^4.1.1",
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^2.22.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  }
}
