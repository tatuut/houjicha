{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["「", "」"],
    ["(", ")"],
    ["（", "）"]
  ],
  "autoClosingPairs": [
    { "open": "\"", "close": "\"" }
  ],
  "surroundingPairs": [
    { "open": "「", "close": "」" },
    { "open": "(", "close": ")" },
    { "open": "（", "close": "）" }
  ],
  "indentationRules": {
    "increaseIndentPattern": ":$",
    "decreaseIndentPattern": "^\\s*>>"
  },
  "folding": {
    "markers": {
      "start": "^\\s*::",
      "end": "^\\s*>>"
    }
  }
}
